{
  "expo": {
    "name": "LiftingLog",
    "slug": "LiftingLog",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "LiftingLog",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "Allow LiftingLog to access your camera to record lift videos.",
        "NSMicrophoneUsageDescription": "Allow LiftingLog to access your microphone for video recording audio.",
        "NSPhotoLibraryAddUsageDescription": "Allow LiftingLog to save lift videos to your photo library."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "READ_MEDIA_VIDEO",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ],
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.LiftingLog"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-media-library",
        {
          "photosPermission": "Allow LiftingLog to access your media library.",
          "savePhotosPermission": "Allow LiftingLog to save lift videos to your media library.",
          "granularPermissions": ["video"]
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#292f3d"
        }
      ],
      "expo-sqlite",
      [
        "expo-notifications",
        {
          "sounds": []
        }
      ],
      "expo-web-browser",
      "@react-native-community/datetimepicker"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "a607c4c7-21f2-409a-83f4-e89d17cce26a"
      }
    },
    "owner": "buzzbyte"
  }
}
